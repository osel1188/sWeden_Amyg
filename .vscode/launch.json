{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest: Debug All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true
        },
        {
            "name": "Pytest: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "justMyCode": true
        },
        {
            "name": "Pytest: Debug Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}::test_function_name"
            ],
            "justMyCode": true
        }
    ]
}